<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/${project.artifactId}.war</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>${project.artifactId}.war</destName>
		</file>
		<file>
			<source>README-standalone.txt</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>README.txt</destName>
		</file>
		<file>
			<source>UPGRADE-standalone.txt</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>UPGRADE.txt</destName>
		</file>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>LICENSE.txt</destName>
		</file>
		<file>
			<source>CHANGELOG.txt</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>CHANGELOG.txt</destName>
		</file>
		<file>
			<source>UPGRADE-3.0.txt</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>UPGRADE-3.0.txt</destName>
		</file>
		<file>
			<source>src/main/resources/log4j-standalone.properties</source>
			<outputDirectory>/${project.artifactId}-${project.version}</outputDirectory>
			<destName>log4j.properties</destName>
		</file>
	</files>
</assembly>